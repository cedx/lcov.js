{
  "source": "lib",
  "destination": "doc/api",
  "excludes": ["index\\.js$"],
  "plugins": [
    {"name": "esdoc-ecmascript-proposal-plugin", "option": {"all": true}},
    {"name": "esdoc-standard-plugin", "option": {
      "accessor": {"access": ["public", "protected"]},
      "brand": {
        "description": "Parse and format to LCOV your code coverage reports, in JavaScript. The best way to share your code coverage stats.",
        "logo": "doc/img/favicon.ico",
        "repository": "https://github.com/cedx/lcov.js",
        "title": "LCOV Reports for JS"
      }
    }}
  ]
}
