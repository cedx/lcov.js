{
  "source": "src",
  "destination": "doc/api",
  "excludes": ["index\\.js$"],
  "plugins": [
    {"name": "esdoc-typescript-plugin"},
    {"name": "esdoc-standard-plugin", "option": {
      "accessor": {"access": ["public", "protected"]},
      "manual": {"files": ["CHANGELOG.md"]},
      "test": {"source": "test"},
      "brand": {
        "description": "Parse and format LCOV coverage reports, in JavaScript.",
        "logo": "doc/img/favicon.ico",
        "repository": "https://github.com/cedx/lcov.js",
        "title": "LCOV Reports for JS"
      }
    }}
  ]
}
